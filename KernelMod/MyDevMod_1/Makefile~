obj-m += random.o

all:
	make -i clean
	make -C /lib/modules/$(shell uname -r)/build M=$(PWD) modules
	sudo insmod random.ko
	sudo mknod /dev/mydev c 198 0
	clear
	tail -2 /var/log/syslog
	cat /dev/mydev

clean:
	make -C /lib/modules/$(shell uname -r)/build M=$(PWD) clean
	sudo rmmod random.ko
	sudo rm /dev/mydev
